---
import { Image } from "astro:assets";
import selfie from "./selfie.jpg";
---

<div class="circle">
    <Image height="267" width="150" src={selfie} alt="selfie" />
</div>
<style>
    .circle {
        float: none;
        line-height: 0; /* remove line-height */
        display: flex; /* circle wraps image */
        align-items: center;
        justify-content: center;
        /* margin: 5px; */
        border: 4px solid transparent;
        border-radius: 50%; /* relative value */
        /*box-shadow: 0px 0px 5px rgba(0,0,0,0.4);*/
        height: 150px;
        width: 150px;
        overflow: hidden;
        margin-left: auto;
        > img {
            position: relative;
            bottom: 16px;
        }
    }

    @media(min-width: 768px) {
        .circle {
            float: right;
            position: relative;
            bottom: 3rem;
            right: 1rem;
        }
    }
</style>
