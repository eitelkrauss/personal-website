---
import { Image } from "astro:assets";
import selfie from "./selfie.jpg";
---

<div href="https://twitter.com/twcloudchen" class="circle">
    <Image height="auto" width="150" src={selfie} alt="selfie" />
</div>
<style>
    .circle {
        float: right;
        line-height: 0; /* remove line-height */
        display: flex; /* circle wraps image */
        align-items: center;
        justify-content: center;
        /* margin: 5px; */
        border: 4px solid rgba(200, 200, 200, 0.4);
        border-radius: 50%; /* relative value */
        /*box-shadow: 0px 0px 5px rgba(0,0,0,0.4);*/
        height: 150px;
        width: 150px;
        overflow: hidden;
        > img {
            position: relative;
            bottom: 16px;
        }
        animation: fadeInUp 1.2s;
    }
    a.circle {
        color: transparent;
    } /* IE fix: removes blue border */

    @media(min-width: 768px) {
        .circle {
            position: relative;
            bottom: 1rem;
            left: 1rem;
        }
    }
</style>
